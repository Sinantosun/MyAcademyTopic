@model List<ResultBlogDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Blog Listesi</h4>
            <p class="card-description">
            </p>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">

                    <tr>
                        <td>#</td>
                        <td>Blog Adı</td>
                        <td>Kapak Resmi</td>
                        <td>Kategori</td>
                        <td>Açıklama</td>
                        <td colspan="2" style="text-align:center">İşlemler</td>
                    </tr>


                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td><img src="@item.CoverImageUrl" /></td>
                            <td>@item.Title</td>
                            <td>@item.Category.CategoryName</td>
                            <td>@(item.ShortDescription.Length>=30?item.ShortDescription.Substring(0,30) + "...":item.ShortDescription)</td>
                            <td><a asp-action="DeleteBlog" asp-route-id="@item.BlogID" class="btn btn-outline-danger"> <i class="typcn typcn-trash"></i> Sil</a></td>
                            <td><a asp-action="UpdateBlog" asp-route-id="@item.BlogID" class="btn btn-outline-success"> <i class="typcn typcn-pen"></i> Güncelle</a></td>
                        </tr>

                    }

                </table>
                <br />
                <a asp-action="CreateBlog" class="btn btn-outline-primary"> <i class="typcn typcn-plus"></i> Ekle</a>
            </div>
        </div>
    </div>
</div>

