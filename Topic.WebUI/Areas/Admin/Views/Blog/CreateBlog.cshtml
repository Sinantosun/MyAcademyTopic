@model CreateBlogDto
@{
    ViewData["Title"] = "CreateBlog";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}



<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<!-- include summernote css/js -->
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Blog Alanı</h4>
            <p class="card-description">
                Yeni Blog Oluştur
            </p>
            <form class="forms-sample" enctype="multipart/form-data" method="post">
                <div class="form-group">
                    <label>Blog Adı</label>
                    <input type="text" class="form-control" asp-for="Title">
                </div>
                <div class="form-group">
                    <label>Kategori Seçiniz</label>
                    <select asp-for="CategoryID" asp-items="@ViewBag.Categories" class="form-control"></select>
                </div>
                <div class="form-group">
                    <label>Kapak Görseli</label>
                    <input type="file" class="form-control" asp-for="CoverPhotoFile">
                </div>
                <div class="form-group">
                    <label>Blog Resim 1</label>
                    <input type="file" class="form-control" asp-for="Image1File">
                </div>
                <div class="form-group">
                    <label>Blog Resim 2</label>
                    <input type="file" class="form-control" asp-for="Image2File">
                </div>
                <div class="form-group">
                    <label>Kısa Açıkama</label>
                    <input type="text" class="form-control" asp-for="ShortDescription">
                </div>
                <div class="form-group">
                    <label>Uzun Açıkama</label>
                    <textarea id="summernote" rows="5" class="form-control" asp-for="LongDescription"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Ekle</button>
            </form>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
<script>
    $('#summernote').summernote({
        placeholder: 'Mesajınızı Giriniz.',

        height: 300,
        toolbar: [
            ['style', ['style']],
            ['font', ['bold', 'underline', 'clear']],
            ['color', ['color']],
            ['para', ['ul', 'ol', 'paragraph']],
            ['table', ['table']],
            ['insert', ['link', 'picture', 'video']],
            ['view', ['fullscreen', 'codeview', 'help']]
        ]
    });
</script>
