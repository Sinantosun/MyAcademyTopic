@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategori Listesi</h4>
            <p class="card-description">
            </p>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">

                    <tr>
                        <td>#</td>
                        <td>Kategori Adı</td>
                        <td>Durum</td>
                        <td colspan="2" style="text-align:center">İşlemler</td>
                    </tr>


                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.CategoryID</td>
                            <td>@item.CategoryName</td>
                            <td>@item.Status</td>
                            <td><a asp-action="DeleteCategory" asp-route-id="@item.CategoryID" class="btn btn-outline-danger">         <i class="typcn typcn-trash"></i> Sil</a></td>
                            <td><a asp-action="UpdateCategory" asp-route-id="@item.CategoryID" class="btn btn-outline-success">         <i class="typcn typcn-pen"></i> Güncelle</a></td>
                        </tr>

                    }

                </table>
                <br />
                <a asp-action="CreateCategory"  class="btn btn-outline-primary"> <i class="typcn typcn-plus"></i> Ekle</a>
            </div>
        </div>
    </div>
</div>