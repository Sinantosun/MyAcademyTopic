@model CreateCategoryDto
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategoriler Alanı</h4>
            <p class="card-description">
              Yeni kategori Oluştur
            </p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Kategori Adı</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="CategoryName" placeholder="Name">
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>
