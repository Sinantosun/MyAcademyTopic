
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/Layout/Index.cshtml";
}

@model UpdateCategoryDto

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategoriler Alanı</h4>
            <p class="card-description">
               Kategori güncelle
            </p>
            <form class="forms-sample" method="post"  enctype="multipart/form-data">
                <div class="form-group">
                    <input type="hidden" class="form-control" id="exampleInputName1" asp-for="CategoryID" placeholder="Name">
                    <label for="exampleInputName1">Kategori Adı</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="CategoryName" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputName2">Açıklama</label>
                    <textarea class="form-control" id="exampleInputName2" asp-for="Description" rows="5"></textarea>
                </div>
                <div class="form-group">
                    <label for="exampleInputName3">Görsel</label>
                    <input type="file" class="form-control" id="exampleInputName3" asp-for="ImageFile" />
                </div>

                <div class="form-group">
                    <label>Yayında Mı ?</label>
                    <br />
                    <label for="exampleInputName4">Evet</label>

                    <input type="checkbox" id="exampleInputName4"  asp-for="Status" /><br />
                </div>
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
            </form>
        </div>
    </div>
</div>


